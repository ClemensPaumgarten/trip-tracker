{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "class-property"
  ],
  "globals": {
    "store": true,
    "process": true,
    "__dirname": true
  },
  "rules": {
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 1,
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "styles|React|Component|store"
      }
    ],
    "no-debugger": 0,
    "no-console": 1,
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
